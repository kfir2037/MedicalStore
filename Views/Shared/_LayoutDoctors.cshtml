
@{
    ViewBag.Title = "_LayoutDoctors";
}


<style>

    body {
        background: #E6E6FA;
        /*background-image: url(https://images.wallpaperscraft.com/image/pizza_tomato_cheese_herbs_75287_1600x900.jpg);
        background-size: cover;
        background-repeat: no-repeat;*/
    }
    .hallo {
        float: right;
        margin-top: 15px;
        font-size: medium;
    }
</style>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Doctor Window", "DoctorWindow", "Doctor")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @*<li>@Html.ActionLink("Login", "Login", "Home")</li>*@

                    <li id="signout">@Html.ActionLink("Sign out", "SignOut", "Home")</li>
                </ul>
                <span class="hallo" style="color:red">Welcome @Session["UserName"]</span>

            </div>
        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Pizza Delivery - Kfir Nahamani & Or Shalit</p>
        </footer>
    </div>

    <script type="text/javascript">


    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
